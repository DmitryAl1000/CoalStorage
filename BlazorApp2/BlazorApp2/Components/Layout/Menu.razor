@rendermode RenderMode.InteractiveServer
<RadzenComponents @rendermode="InteractiveServer" />

@*
==================================================================================
========   Часть хедера тут, потому как открывает закрывает меню   ===============
==================================================================================
*@

<RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" Wrap="FlexWrap.Wrap" class="rz-p-6">
    <RadzenHeader>
        <RadzenStack class="rz-background-color-success" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Icon="compare_arrows" Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <HeaderContent/>
        </RadzenStack>
    </RadzenHeader>
</RadzenStack>

@* 
==================================================================================
===================================   Меню   =====================================
==================================================================================
*@
<RadzenSidebar Responsive="false" Style="width: max-content">
    <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
        <RadzenPanelMenuItem Text="Главная" Icon="assignment" Path="/">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Редактировать склады" Icon="settings" Path="/StorageRedactor">
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="История" Icon="history" >
            <RadzenPanelMenuItem Text="Состоние склада по датам" Icon="input" Path="/HistoryByDates" />
            <RadzenPanelMenuItem Text="История редактирования складов" Icon="build" Path="/StorageSlotsHistory" />
            <RadzenPanelMenuItem Text="История движения грузов " Icon="list" Path="/CargoHistory"/>
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>


@code {
    public bool sidebarExpanded { get; set; } = true;
}